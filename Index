  <script>
    const stripe = Stripe('pk_live_51RuGwdHygr986gwFFKyGptzL2owRQfO5tOxJyBUbcwXo5qWxkcA2huIkD20DdhQMwAv9LuVIDYS0qTRin9fmQBCj00fwNPApuU');

    async function redirectToCheckout(priceId) {
      try {
        const { sessionId } = await fetch('/create-checkout-session', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            priceId: priceId,
            successUrl: 'https://www.yourdomain.com/success',
            cancelUrl: 'https://www.yourdomain.com/cancel',
          }),
        }).then(response => response.json());

        const { error } = await stripe.redirectToCheckout({
          sessionId: sessionId,
        });

        if (error) {
          console.error('Error during redirect:', error);
        }
      } catch (error) {
        console.error('An error occurred:', error);
      }
    }
  </script>
